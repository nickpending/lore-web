---
import '../styles/global.css';
import Sidebar from '../components/Sidebar';
import Header from '../components/Header';

interface Props {
  title: string;
  headerTitle?: string;
  currentPath?: string;
  counts?: {
    commits?: number;
    projects?: number;
  };
}

const { title, headerTitle, currentPath = '/', counts } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Lore - Visual knowledge fabric dashboard" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title} | lore</title>
  </head>
  <body class="overflow-x-hidden">
    <!-- Sidebar -->
    <Sidebar currentPath={currentPath} counts={counts} client:load />

    <!-- Main area (offset by sidebar width) -->
    <div class="ml-52 min-h-screen flex flex-col">
      <!-- Header -->
      <Header title={headerTitle} client:load />

      <!-- Content -->
      <main class="flex-1 bg-bg-deep">
        <slot />
      </main>
    </div>
  </body>
</html>
